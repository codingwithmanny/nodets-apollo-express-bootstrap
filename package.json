{
  "name": "nodets-apollo-express-bootstrap",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/codingwithmanny/nodets-apollo-express-bootstrap",
  "author": "@codingwithmanny",
  "license": "MIT",
  "scripts": {
    "precommit": "yarn test",
    "build": "tsc",
    "dev": "ts-node-dev src/server.ts",
    "db": "ts-node-dev src/db.ts",
    "start": "export NODE_ENV=production && tsc && node build/server.js",
    "test": "yarn test:lint && yarn test:coverage",
    "test:jest": "./node_modules/.bin/jest --watch",
    "test:coverage": "./node_modules/.bin/jest --coverage",
    "test:lint": "./node_modules/.bin/eslint '*/**/*.{js,ts}' --quiet --fix",
    "knex": "knex --knexfile ./knexfile.ts"
  },
  "dependencies": {
    "apollo-server-express": "^2.23.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "helmet": "^3.23.3",
    "knex": "^0.21.19",
    "pg": "^8.6.0",
    "typescript": "4.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/faker": "^5.5.3",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.5.3",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "ts-node-dev": "^1.0.0-pre.50"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
